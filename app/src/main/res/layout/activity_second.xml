<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg4"
    android:elevation="@dimen/activity_vertical_margin"
    tools:context=".SecondActivity">

    <Button
        android:id="@+id/button6"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="239dp"
        android:layout_marginTop="710dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/bg"
        android:text="ADD TO MY PLANTS"
        android:textColor="@android:color/background_dark"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/acorn_squash" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="230dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="4dp"
        android:gravity="bottom"
        android:text="ACORN SQUASH"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButton2"
        style="@style/Widget.AppCompat.ImageButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/textView12"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="17dp"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/sow_depth" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageButton2"
        android:layout_centerInParent="false"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:text="2 cm"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignTop="@id/imageButton2"
        android:layout_alignBottom="@id/imageButton2"
        android:layout_marginLeft="65dp"
        android:layout_toRightOf="@id/imageButton2"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/distance_plants" />

    <TextView
        android:id="@+id/textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageButton4"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:text="150cm"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignTop="@id/imageButton4"
        android:layout_alignBottom="@id/imageButton4"
        android:layout_marginLeft="65dp"
        android:layout_toRightOf="@id/imageButton4"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/background" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageButton5"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="10dp"
        android:text="Full Sun"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/textView14"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/moisture" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageButton6"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:text="Moist"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/imageButton6"
        android:layout_alignTop="@id/imageButton6"
        android:layout_marginLeft="65dp"
        android:layout_toRightOf="@id/imageButton6"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/ph" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageButton7"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:text="6.0ph"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_alignTop="@id/imageButton7"
        android:layout_alignBottom="@id/imageButton7"
        android:layout_marginLeft="65dp"
        android:layout_toRightOf="@id/imageButton7"
        android:background="@color/transparent"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/average" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageButton8"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="10dp"
        android:text="90days"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/textView18"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:background="@color/transparent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/indoor" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageButton9"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:text="Yes"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/imageButton11"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/textView17"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/imageButton9"
        android:background="@color/transparent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/outdoora" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageButton11"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="10dp"
        android:text="Yes"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/imageButton12"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_below="@id/textView18"
        android:layout_marginLeft="65dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/imageButton11"
        android:background="@color/transparent"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/temperature" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageButton12"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="10dp"
        android:text="15-25"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentTop="false"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="false"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="25dp"
        android:layout_marginTop="710dp"
        android:layout_marginEnd="232dp"
        android:background="@drawable/bg"
        android:text="Add To favourites"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

</RelativeLayout>